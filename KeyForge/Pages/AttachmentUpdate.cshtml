@page "{attachmentId:int}"
@model KeyForge.AttachmentUpdateModel
@{
    ViewData["Title"] = "Edycja";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AttachmentUpdate</title>
</head>
<body>
    <h2>Edycja pliku</h2>

    <h3 style="background-color:red;">@Model.ErrorMsg</h3>

    <form method="post">
        <input type="hidden" asp-for="Attachment.Id" />
        <input type="hidden" asp-for="Attachment.Data" />
        <table class="table">
            <tr>
                <td>
                    <button type="submit" class="btn btn-primary">Zapisz</button>
                    <a asp-page=".\AttachmentHub" asp-route-tournamentId="0" class="btn btn-primary"> Powrót </a>
                </td>
            </tr>
        </table>
        <table class="table">
            <tr>
                <td>
                    <div class="form-group">
                        <label asp-for="Attachment.Name"></label>
                        <input asp-for="Attachment.Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Attachment.Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Attachment.ShortDescription"></label>
                        <input asp-for="Attachment.ShortDescription" class="form-control" />
                        <span class="text-danger" asp-validation-for="Attachment.ShortDescription"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Attachment.Description"></label>
                        <textarea asp-for="Attachment.Description" class="form-control" rows="5"> </textarea>
                        <span class="text-danger" asp-validation-for="Attachment.Description"></span>
                    </div> 
                    <div class="form-group">
                        <label>Przypisz do turnieju</label>
                        <select class="form-control" asp-for="TournamentID"
                                asp-items="Model.AvailableTournaments">
                            <option value=""></option>
                        </select>
                    </div>
                </td>
            </tr>
        </table>
    </form>
</body>
</html>
